<?xml version="1.0" encoding="utf-8"?>
<configuration scan="true" scanPeriod="1 minute">
    <appender name="FILE-DOWNLOAD"
              class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>/var/opt/dans.knaw.nl/log/easy-download/easy-download.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>/var/opt/dans.knaw.nl/log/easy-download/easy-download.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>[%date{ISO8601}] %-5level %msg%n</pattern>
        </encoder>
    </appender>
    <appender name="SIFT-STATISTICS" class="ch.qos.logback.classic.sift.SiftingAppender">
        <discriminator>
            <key>logFile</key>
            <defaultValue>download</defaultValue>
        </discriminator>
        <sift>
            <appender name="FILE-${logFile}" class="ch.qos.logback.core.rolling.RollingFileAppender">
                <file>/var/opt/dans.knaw.nl/log/easy-download/easy-${logFile}.log</file>
                <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
                    <fileNamePattern>${user.home}/easy-${logFile}.%d{yyyy-MM-dd}.log</fileNamePattern>
                    <maxHistory>30</maxHistory>
                </rollingPolicy>
                <encoder>
                    <pattern>%date{ISO8601} %msg%n</pattern>
                </encoder>
            </appender>
        </sift>
    </appender>
    <appender name="JOURNAL" class="org.gnieh.logback.SystemdJournalAppender">
        <logStackTrace>true</logStackTrace>
        <logLoggerName>true</logLoggerName>
        <syslogIdentifier>easy-download</syslogIdentifier>
    </appender>
    <root level="info">
        <appender-ref ref="FILE-DOWNLOAD"/>
        <appender-ref ref="SIFT-STATISTICS"/>
        <appender-ref ref="JOURNAL" />
    </root>
    <logger name="nl.knaw.dans.easy" level="info" />
</configuration>
