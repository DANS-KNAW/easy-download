<?xml version="1.0" encoding="utf-8"?>
<configuration scan="true" scanPeriod="1 minute">
    <appender name="FILE"
              class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>/var/opt/dans.knaw.nl/log/easy-download/easy-download.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>/var/opt/dans.knaw.nl/log/easy-download/easy-download.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>[%date{ISO8601}] %-5level %msg%n</pattern>
        </encoder>
    </appender>
    <appender name="FILE-STATISTICS"
              class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>/var/opt/dans.knaw.nl/log/easy-download/easy-statistics.%d{yyyy-MM-dd}.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>/var/opt/dans.knaw.nl/log/easy-download/easy-statistics.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%date{ISO8601} %msg%n</pattern>
        </encoder>
    </appender>
    <appender name="JOURNAL" class="org.gnieh.logback.SystemdJournalAppender">
        <logStackTrace>true</logStackTrace>
        <logLoggerName>true</logLoggerName>
        <syslogIdentifier>easy-download</syslogIdentifier>
    </appender>
    <root level="warn">
        <appender-ref ref="JOURNAL" />
    </root>
    <logger name="nl.knaw.dans.easy" level="info">
        <appender-ref ref="FILE" />
    </logger>
    <logger name="easy-statistics" level="info">
        <appender-ref ref="FILE-STATISTICS" />
    </logger>
</configuration>
